# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h,cpp,hpp,cxx,hxx,cc,hh,cppm}]
indent_size = 4
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.bat]
end_of_line=crlf
indent_size = 2
indent_style = space

[{CMakeLists.txt,*.cmake,meson.build}]
indent_size = 2
